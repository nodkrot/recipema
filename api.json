{
  "openapi": "3.0.0",
  "info": {
    "title": "RecipeMa",
    "version": "0.1.0",
    "contact": {}
  },
  "servers": [{
    "url": "https://api.test.com/openapitest/v1"
  }],
  "paths": {},
  "components": {
    "schemas": {
      "Recipe": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "gallery": {
            "type": "array",
            "items": "#/components/schemas/Image"
          },
          "ingredients": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Ingredient"
            }
          },
          "directions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Direction"
            }
          },
          "pairings": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "createdAt": {
            "type": "date-time"
          },
          "authorId": {
            "type": "string"
          },
          "servings": {
            "type": "number"
          },
          "prepTime": {
            "type": "string"
          },
          "cookTime": {
            "type": "string"
          },
          "cuisine": {
            "type": "string"
          }
        },
        "required": ["name", "ingredients", "directions"]
      },
      "Ingredient": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "amount": {
            "$ref": "#/components/schemas/Amount"
          }
        },
        "required": ["name", "amount"]
      },
      "Direction": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string"
          }
        },
        "required": ["sequence", "text"]
      },
      "Amount": {
        "type": "object",
        "properties": {
          "value": {
            "type": "decimal"
          },
          "unit": {
            "$ref": "#/components/schemas/Unit"
          }
        },
        "required": ["value", "unit"]
      },
      "Unit": {
        "type": "string",
        "enum": ["piece", "gallon", "quart", "pint", "cup", "ounce", "kilogram", "gram", "milligram", "teaspoon", "tablespoon"]
      },
      "Image": {
        "type": "object",
        "properties": {
          "uid": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "url": {
            "type": "string"
          }
        },
        "required": ["uid", "name", "url"]
      }
    },
    "links": {},
    "callbacks": {}
  },
  "security": []
}
